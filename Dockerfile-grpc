# --- build stage ---
FROM golang:1.24-alpine AS build
WORKDIR /src

# Install build deps
RUN apk add --no-cache ca-certificates protobuf protobuf-dev git make

# Ensure PATH includes Go bin
ENV PATH=$PATH:/go/bin

# Install protoc-gen-go and protoc-gen-go-grpc
RUN go install google.golang.org/protobuf/cmd/protoc-gen-go@latest && \
    go install google.golang.org/grpc/cmd/protoc-gen-go-grpc@latest

# Go module download first
COPY go.mod go.sum ./
RUN go mod download && \
    go get google.golang.org/grpc@latest && \
    go get google.golang.org/grpc/credentials/insecure@latest && \
    go mod tidy

# Copy source code to resolve dependencies
COPY . .

# Generate proto files (after copying source code)
RUN mkdir -p api/proto && \
    export PATH=$PATH:/go/bin && \
    protoc --go_out=api/proto --go_opt=paths=source_relative \
           --go-grpc_out=api/proto --go-grpc_opt=paths=source_relative \
           api/proto/*.proto && \
    if [ -d api/proto/api/proto ]; then \
        mv api/proto/api/proto/* api/proto/ && \
        rm -rf api/proto/api; \
    fi && \
    echo "Proto files generated"

# Update go.sum after proto generation
RUN go mod tidy

# Build static binary
RUN CGO_ENABLED=0 GOOS=linux go build -o /bin/app ./cmd/server-grpc

# --- runtime stage ---
FROM alpine:3.19
WORKDIR /app
COPY --from=build /bin/app /app/app
COPY --from=build /etc/ssl/certs/ca-certificates.crt /etc/ssl/certs/

# Run as non-root
RUN adduser -D -H appuser
USER appuser

# The app listens on 50051 (gRPC) and 50052 (Raft)
EXPOSE 50051 50052
ENTRYPOINT ["/app/app"]



